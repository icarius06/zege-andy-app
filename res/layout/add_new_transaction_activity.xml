<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- Dummy item to prevent edit text from receiving focus -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.zege.devtest.flatui.views.FlatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:maxLines="1"
                android:text="New Transaction"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <com.zege.devtest.flatui.views.FlatTextView
                    android:id="@+id/amount_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Amount"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    flatui:fl_textColor="fl_main" />

                <com.zege.devtest.flatui.views.FlatEditText
                    android:id="@+id/amountEdittext_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:gravity="center_vertical"
                    android:hint="Enter the transaction amount"
                    android:includeFontPadding="true"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    flatui:fl_cornerRadius="0dp"
                    flatui:fl_fieldStyle="fl_box" />

                <com.zege.devtest.flatui.views.FlatTextView
                    android:id="@+id/unitsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Units"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    flatui:fl_textColor="fl_main" />

                <com.zege.devtest.flatui.views.FlatEditText
                    android:id="@+id/unitsEdittext_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:gravity="center_vertical"
                    android:hint="Units"
                    android:includeFontPadding="true"
                    android:inputType="number"
                    android:maxLines="1"
                    flatui:fl_cornerRadius="0dp"
                    flatui:fl_fieldStyle="fl_box" />

                <com.zege.devtest.flatui.views.FlatTextView
                    android:id="@+id/particularsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Particulars"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    flatui:fl_textColor="fl_main" />

                <com.zege.devtest.flatui.views.FlatEditText
                    android:id="@+id/particularsEdittext_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:gravity="center_vertical"
                    android:hint="Particulars"
                    android:includeFontPadding="true"
                    android:inputType="text"
                    android:maxLines="5"
                    flatui:fl_cornerRadius="0dp"
                    flatui:fl_fieldStyle="fl_box" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <com.zege.devtest.flatui.views.FlatTextView
                    android:id="@+id/title_checkbox_priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/priority_lbl"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    flatui:fl_textColor="fl_main" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:weightSum="2" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <com.zege.devtest.flatui.views.FlatCheckBox
                            android:id="@+id/checkbox_very_high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dip"
                            android:background="#0000"
                            android:text="Very High"
                            flatui:fl_size="20dip" />

                        <com.zege.devtest.flatui.views.FlatCheckBox
                            android:id="@+id/checkbox_high"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dip"
                            android:background="#0000"
                            android:text="High"
                            flatui:fl_size="20dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <com.zege.devtest.flatui.views.FlatCheckBox
                            android:id="@+id/checkbox_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dip"
                            android:background="#0000"
                            android:text="Medium"
                            flatui:fl_size="20dip" />

                        <com.zege.devtest.flatui.views.FlatCheckBox
                            android:id="@+id/checkbox_low"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dip"
                            android:background="#0000"
                            android:text="Low"
                            flatui:fl_size="20dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:weightSum="2" >

                <com.zege.devtest.flatui.views.FlatButton
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    flatui:fl_textAppearance="fl_light" />

                <com.zege.devtest.flatui.views.FlatButton
                    android:id="@+id/buttonSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:text="Submit"
                    flatui:fl_textAppearance="fl_light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>